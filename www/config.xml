<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vedant.shakeItRoulette" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Shake It Roulette</name>
    <description>
        Turn the fortune to your side with Shake It Roulette.
    </description>
    <author email="prashant0268@gmail.com" href="http://liontechsolutions.com/">
        Vedant Technologies
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="landscape" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <engine name="ios" spec="~4.5.5" />
    <engine name="android" spec="~7.1.4" />
    <plugin name="cordova-plugin-screen-orientation" spec="~3.0.1" />
</widget>
